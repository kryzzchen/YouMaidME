<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_As_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/register_as_activity_employer_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/man"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/register_as_activity_employer_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/employer"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:id="@+id/register_as_activity_employee_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/man"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/register_as_activity_employee_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/employee"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

</RelativeLayout>