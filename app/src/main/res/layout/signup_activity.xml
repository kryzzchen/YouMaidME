<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image">


    <include layout="@layout/toolbar"
        android:id="@+id/signup_activity_toolbar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:id="@+id/signup_activity_linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_24dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/signup_activity_username_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:singleLine="true"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/signup_activity_linear_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/signup_activity_linear_layout_1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email_24dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/signup_activity_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/signup_activity_linear_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/signup_activity_linear_layout_2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_lock_24dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/signup_activity_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/signup_activity_linear_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/signup_activity_linear_layout_3">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_place_24dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/signup_activity_location_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:singleLine="true"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/signup_activity_signup_button_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_style"
            android:layout_below="@id/signup_activity_linear_layout_4"/>

    </RelativeLayout>
</RelativeLayout>