<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar"
        android:id="@+id/signup_activity_toolbar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/signup_activity_username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:singleLine="true"
            android:ems="10"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:layout_marginBottom="5dp"/>



        <EditText
            android:id="@+id/signup_activity_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_email_24dp"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:singleLine="true"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/signup_activity_username_et"/>



        <EditText
            android:id="@+id/signup_activity_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:ems="10"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_lock_24dp"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/signup_activity_email_et"/>


        <EditText
            android:id="@+id/signup_activity_location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_place_24dp"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/signup_activity_password_et"/> '

        <LinearLayout
            android:layout_below="@+id/signup_activity_location_et"
            android:id="@+id/signup_activity_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/signup_activity_employer_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employer"
                android:padding="15dp"/>

            <CheckBox
                android:id="@+id/signup_activity_maid_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maid"
                android:padding="15dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/signup_activity_signup_button_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_style"
            android:layout_below="@+id/signup_activity_checkBox"/>
        <TextView
            android:id="@+id/signup_activty_old_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log In here."
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_below="@+id/signup_activity_signup_button_bt"/>

    </RelativeLayout>
</RelativeLayout>